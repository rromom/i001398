<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Se cambia la posicion del campo cuenta analÃ­tica al la cabecera de la orden de venta -->
    <record id="view_order_form_inerit" model="ir.ui.view">
        <field name="name">view.order.form.inerit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale_info']//field[@name='analytic_account_id']" position="attributes">
                <attribute name="attrs"> {'invisible': 1} </attribute>
            </xpath>
            <xpath expr="//group[@name='sale_header']//group[@name='order_details']" position="inside">
                <field name="analytic_account_id" context="{'default_partner_id':partner_invoice_id, 'default_name':name}" attrs="{'readonly': ['|',('invoice_count','!=',0),('state','=','sale')]}" groups="analytic.group_analytic_accounting" force_save="1"/>
            </xpath>
        </field>
    </record>

</odoo>
