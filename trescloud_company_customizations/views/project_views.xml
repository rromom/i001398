<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Record que define que por defecto al abrir los proyecto se visualizaran en una interfaz tipo lista -->
    <record id="project.open_view_project_all_group_stage" model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,form,calendar,activity</field>
        <field name="view_id" ref="project.view_project" />
    </record>

    <!-- Record en los cuales se agrega los campos solicitados y computados del proyecto -->
    <record id="edit_project_inherit" model="ir.ui.view">
        <field name="name">project.project.form.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='dates']" position="after">
                <field name="localization" />
                <field name="customer_approval" widget='radio'/>
                <field name="project_progress"  invisible='1'/>
                <field name="sale_order_task_id"  invisible='1'/>
                <field name="amount_sale_orders"  invisible='1'/>
            </xpath>
        </field>
    </record>

    <!-- Record que remplaza la estructura de la vista tipo lista por la solicitada por el cliente -->
    <record id="view_project_inherit" model="ir.ui.view">
        <field name="name">view.project.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project"/>
        <field name="arch" type="xml">
            <xpath expr="//tree[1]" position="replace">
                <tree decoration-muted="active == False" string="Projects" multi_edit="1" sample="1" default_order="sequence, name, id">
                    <field name="sequence" optional="show" widget="handle"/>
                    <field name="partner_id" optional="show" string="Cliente"/> <!-- campo cambiado de orden -->
                    <field name="name" invisible="1"/>
                    <field name="message_needaction" invisible="1"/>
                    <field name="name" invisible="1"/>
                    <field name="active" invisible="1"/>
                    <field name="is_favorite" nolabel="1" width="1" widget="boolean_favorite"/>
                    <field name="display_name" string="Nombre del Proyecto" class="fw-bold"/> <!-- Campo cambiado orden -->
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" optional="show"/> <!-- Campo cambiado de orden -->
                    <field name="customer_approval"/> <!-- Campo solicitado por el cliente -->
                    <field name="sale_order_task_id" string="NÂ° Pedido"/> <!-- Campo solicitado por el cliente -->
                    <field name="user_id" optional="show" string="Gerente del Proyecto" widget="many2one_avatar_user" options="{'no_open':True, 'no_create': True, 'no_create_edit': True}"/> <!-- Campo cambiado de orden -->
                    <field name="date_start" string="Fecha de Inicio" widget="daterange" options="{'related_end_date': 'date'}"/> <!-- Campo cambiado de orden -->
                    <field name="date" string="Fecha Final" widget="daterange" options="{'related_start_date': 'date_start'}"/> <!-- Campo cambiado de orden -->
                    <field name="amount_sale_orders"/> <!-- Campo solicitado por el cliente -->
                    <field name="localization"/> <!-- Campo solicitado por el cliente -->
                    <field name="project_progress" widget="progressbar"/> <!-- Campo solicitado por el cliente -->
                    <field name="privacy_visibility" optional="hide"/>
                    <field name="company_id" optional="show"  groups="base.group_multi_company" options="{'no_create': True, 'no_create': True}"/>
                    <field name="company_id" invisible="1"/>
                    <field name="analytic_account_id" optional="hide" groups="analytic.group_analytic_accounting"/>
                    <field name="last_update_color" invisible="1"/>
                    <field name="last_update_status" string="Status" nolabel="1" optional="show" widget="status_with_color" options="{'color_field': 'last_update_color', 'hide_label': True}"/>
                    <field name="stage_id" options="{'no_open': True}" optional="show"/>
                </tree>
            </xpath>
        </field>
    </record>

   

</odoo>
